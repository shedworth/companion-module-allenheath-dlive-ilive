{
	"name": "allenheath-dlive-ilive",
	"version": "2.0.3",
	"main": "dist/main.js",
	"scripts": {
		"postinstall": "husky",
		"format": "prettier -w .",
		"package": "run build && companion-module-build",
		"build": "rimraf dist && run build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint",
		"lint": "run lint:raw .",
		"test": "jest --watchAll"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/shedworth/companion-module-allenheath-dlive-ilive.git"
	},
	"packageManager": "yarn@4.10.3",
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"dependencies": {
		"@companion-module/base": "^1.4.0",
		"lodash": "^4.17.21",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.3.0",
		"@types/jest": "^30.0.0",
		"@types/lodash": "^4",
		"@types/node": "^25.0.3",
		"eslint": "^9.39.2",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"rimraf": "^6.1.2",
		"ts-jest": "^29.4.6",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.50.0"
	}
}
